[Unit]
Description=Daily Graphiti S3 Backup Timer
Requires=graphiti-backup.service

[Timer]
# Run daily at 2 AM UTC
OnCalendar=daily
OnCalendar=*-*-* 02:00:00
# Run immediately if the system was down at the scheduled time
Persistent=true
# Randomize start time by up to 30 minutes to avoid load spikes
RandomizedDelaySec=1800

[Install]
WantedBy=timers.target