# Graphiti Environment Configuration
# Copy this file to ../.env (in the server directory) and fill in your values

# LLM Provider Configuration (Required)
OPENAI_API_KEY=sk-...your-api-key-here...

# Alternative LLM providers (optional - uncomment to use)
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=
# GROQ_API_KEY=

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here

# Embedding Provider (optional, defaults to OpenAI)
# VOYAGE_API_KEY=

# Server Configuration (optional)
# HOST=0.0.0.0
# PORT=8000
# RELOAD=true

# Production Settings
# USE_PARALLEL_RUNTIME=false  # Neo4j enterprise feature